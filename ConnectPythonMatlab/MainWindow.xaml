<Window x:Class="ConnectPythonMatlab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectPythonMatlab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="376*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="ControlPage" Margin="0,27,0,0" Grid.RowSpan="2">
            <DockPanel x:Name="PanelWindow"/>
        </ContentControl>
        <DockPanel Height="25" VerticalAlignment="Top">
            <Menu DockPanel.Dock="Top" Height="25">
                <MenuItem Header="Page">
                    <MenuItem Header="Page1" Click="Page1Click"/>
                    <MenuItem Header="Page2" Click="Page2Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>




    </Grid>
</Window>
